{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://accumulate.network/schemas/bundle-manifest.schema.json",
  "title": "Accumulate Studio Export Bundle Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "bundle_version",
    "bundle_id",
    "title",
    "network_default",
    "languages_generated",
    "requires",
    "variables",
    "flow_file",
    "assertions"
  ],
  "properties": {
    "bundle_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z-\\.]+)?(?:\\+[0-9A-Za-z-\\.]+)?$"
    },
    "bundle_id": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "studio_version": { "type": "string" },
    "network_default": {
      "type": "string",
      "enum": ["mainnet", "testnet", "devnet", "local", "kermit"]
    },
    "languages_generated": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": ["python", "javascript", "typescript", "rust", "dart", "csharp"]
      }
    },
    "requires": {
      "type": "object",
      "additionalProperties": false,
      "required": ["faucet", "credits", "signing", "receipt_verification"],
      "properties": {
        "faucet": { "type": "boolean" },
        "credits": { "type": "boolean" },
        "signing": { "type": "boolean" },
        "receipt_verification": { "type": "boolean" }
      }
    },
    "variables": {
      "type": "array",
      "items": { "$ref": "#/$defs/variable" }
    },
    "flow_file": {
      "type": "string",
      "minLength": 1,
      "description": "Path to canonical flow representation (flow.yaml)."
    },
    "assertions": {
      "type": "object",
      "additionalProperties": false,
      "required": ["file", "expected_state"],
      "properties": {
        "file": { "type": "string", "minLength": 1 },
        "expected_state": { "type": "string", "minLength": 1 }
      }
    },
    "agent": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled", "task_file", "acceptance_file", "agent_pack_refs"],
      "properties": {
        "enabled": { "type": "boolean" },
        "task_file": { "type": "string", "minLength": 1 },
        "acceptance_file": { "type": "string", "minLength": 1 },
        "agent_pack_refs": { "type": "string", "minLength": 1 },
        "mcp_config": { "type": "string", "minLength": 1 }
      }
    }
  },
  "$defs": {
    "variable": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]*$",
          "description": "Convention: uppercase identifiers."
        },
        "type": {
          "type": "string",
          "enum": ["url", "string", "decimal", "int", "bool", "bytes", "object"]
        },
        "default": {},
        "description": { "type": "string" },
        "secret": {
          "type": "boolean",
          "default": false,
          "description": "If true, UIs should treat value as sensitive."
        }
      }
    }
  }
}
